<Window x:Name="mainWindow" x:Class="Director.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MiDeRP Director EPO2-D2" Height="426.4" Width="400" WindowStartupLocation="CenterScreen" SnapsToDevicePixels="True" MinHeight="400" MinWidth="400">
    <Grid>
        
        
        <Canvas x:Name="fieldmapcanvas" Margin="10,10,10.6,49.8" ClipToBounds="True"/>       
        <StatusBar x:Name="statusBar" Margin="0,0,0,0" Height="20" VerticalAlignment="Bottom">
            <StatusBarItem Content="{Binding MineCount, Mode=OneWay}" Width="25" x:Name="statusBarMineNumber" Margin="0,0,0,0" HorizontalAlignment="Left"  HorizontalContentAlignment="Right" VerticalContentAlignment="Center"/>
            <StatusBarItem Width="40" Content="mines" x:Name="statusBarMineText" Margin="0,0,0,0" HorizontalAlignment="Left" VerticalContentAlignment="Center"/>
             
            
        </StatusBar>
        <StackPanel Height="20" VerticalAlignment="Bottom" Margin="10,0,10,24.8" Orientation="Horizontal">
            <ComboBox x:Name="comPortsComboBox" Width="60" Margin="2,0,2,0" Height="20" DropDownOpened="comPortsComboBox_DropDownOpened"/>
            <Button x:Name="TestDrawButton" Content="Draw Field" Width="59" Margin="2,0,2,0" Height="20" Click="TestDrawButton_Click" IsEnabled="False"/>
            <Button x:Name="findPathButton" Content="Find Path" Width="61" Margin="2,0,2,0" Height="20" IsEnabled="False" Click="findPathButton_Click"/>
            <Button x:Name="startInitButton" Content="Start Init" Width="52" Margin="2,0,2,0" Height="20" Click="startInitButton_Click" IsDefault="True"/>
            <Button x:Name="destroyButton" Content="Destroy" Width="54" Margin="2,0,2,0" Height="20" Click="destroyButton_Click" IsEnabled="False" IsCancel="True"/>
        </StackPanel>

    </Grid>
</Window>
